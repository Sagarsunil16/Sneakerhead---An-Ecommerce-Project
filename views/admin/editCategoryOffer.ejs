                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Ending Date</label>
                                        <input id="catEndingDate" name="endingDate" type="date" class="form-control" value="<%= offerDetails.endingDate.toISOString().split('T')[0] %>">
                                        <div id="catEndingDate-error" class="error-message text-danger"></div>
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Category</label>
                                        <select class="form-select" name="category">
                                            <% if (locals.categoryData) { %>
                                                <% for (let i = 0; i < categoryData.length; i++) { %>
                                                    <option value="<%= categoryData[i]._id %>" 
                                                        <% if (categoryData[i]._id.toString() === offerDetails.categoryOffer.category.toString()) { %>selected<% } %>>
                                                        <%= categoryData[i].name %>
                                                    </option>
                                                <% } %>
                                            <% } %>
                                        </select>   
                                        <div id="category-error" class="error-message text-danger"></div>
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Category Discount</label>
                                        <input type="text" placeholder="Type here" name="categoryDiscount" class="form-control" id="categoryDiscount" value="<%= offerDetails.categoryOffer.discount %>">
                                        <div id="catDiscount-error" class="error-message text-danger"></div>
                                    </div>
                                    <button type="submit" class="btn ms-auto d-block btn-primary btn-md rounded font-sm hover-up">Update</button>
                                    <% } %>
