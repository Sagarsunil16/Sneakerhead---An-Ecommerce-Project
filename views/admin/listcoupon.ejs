                </div>
                <div >
                    <button class="btn btn-primary" id="createCouponBtn">Create Coupon</button>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>S NO.</th>
                                    <th>Coupon Name</th>
                                    <th>Description</th>
                                    <th>Discount In Purchase Amount</th>
                                    <th>Minimum Purchase Amount</th>
                                    <th>Maximum Purchase Amount</th>
                                    <th>Expired on</th>
                                    <th>Maximum Users</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% coupons.forEach((coupon, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td><%= coupon.code %></td>
                                        <td><%= coupon.description %></td>
                                        <td><%= coupon.discountPercentage %></td>
                                        <td><%= coupon.minimumAmount %></td>
                                        <td><%= coupon.maximumAmount %></td>
                                        <td><%= coupon.expirationDate %></td>
                                        <td><%= coupon.maxUsers %></td>
                                        <td>
                                            <% if (coupon.isActive) { %>
                                                Active
                                            <% } else { %>
                                                Inactive
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (coupon.isActive) { %>
                                                <button class="btn btn-primary" onclick="toggleCoupon('<%= coupon._id %>', false)">Disable</button>
                                            <% } else { %>
                                                <button class="btn btn-primary" onclick="toggleCoupon('<%= coupon._id %>', true)">Activate</button>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                        <!-- .col// -->
                    </div> <!-- .row // -->
                </div> <!-- card body .// -->
