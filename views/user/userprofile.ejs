    <style>
        /* General styles */

        .btn-spacing {
            margin-right: 15px;
            /* Add space between buttons */
        }

        .btn-spacing:last-child {
            margin-right: 0;
            /* Remove margin for the last button */
        }

        .block-body {
            padding: 20px;
            background-color: #f8f9fa;
            /* Light background color */
        }

        .d-flex {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            /* Distribute space between items */
        }

        .lead {
            margin: 40px;
            padding: 15px;
            border-radius: 5px;
            /* Rounded corners */
            background-color: #d4edda;
            /* Light green background for success */
            color: #155724;
            /* Dark green text for success */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            /* Subtle shadow for depth */
        }

        .fw-semibold {
            font-weight: 600;
        }

        .text-muted {
            color: #6c757d;
        }

        .custom-text-color {
            color: #28a745;
            /* Custom green text color */
        }

        .custom-bold {
            font-weight: 700;
        }

        #refferalCode,
        #totalRewards {
            color: #343a40;
            /* Dark text color for the referral code and rewards amount */
        }

        .bg-success-light {
            background-color: #e2f3e8;
            /* Light green background for success */
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .d-flex {
                flex-direction: column;
                /* Stack items vertically on smaller screens */
            }

            .lead {
                width: 100%;
                /* Full width items on smaller screens */
            }
        }
    </style>
