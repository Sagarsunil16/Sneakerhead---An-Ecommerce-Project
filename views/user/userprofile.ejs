        document.addEventListener('DOMContentLoaded', function () {
    const totalRewards = parseFloat(document.getElementById('totalRewards').innerText);
    const addToWalletButton = document.getElementById('addToWallet');

    if (totalRewards === 0) {
        addToWalletButton.disabled = true;
    }

    addToWalletButton.addEventListener('click', function () {
        const referralCode = this.getAttribute('data-referral-code');

        fetch('/user/addToWallet', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ referralCode: referralCode })
        })
        .then(response => response.json())
        .then(data => {
            console.log(data); // Check the response here
            if (data.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: data.message||'Added to wallet successfully.',
                    showConfirmButton: true,
                }).then(()=>{
                    window.location.reload()
                })
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: data.message || 'An error occurred while adding to the wallet.',
                    showConfirmButton: true,
                });
            }
        })
        .catch(error => {
            console.error('Error:', error);
            Swal.fire({
                icon: 'error',
                title: 'Fetch Error',
                text: 'An error occurred while making the request.',
                showConfirmButton: true,
            });
        });
    });
});


